html {
   min-height: 100%;
}

.center {
  text-align: center;
}

.check_boxes.required.control-label{
    display: none;
}

.navbar-fixed {
  padding-right: 20px;
}


.opacity {
  opacity: 0.80;
  filter: alpha(opacity=40); /* For IE8 and earlier */
}

.btn-lg {
  font-size: 16px;
  padding: 18px 50px;
  text-transform: none;
  font-weight: normal;
  border: black;
  background-color: #fafafa;
  border: 1px solid;
}

.btn-lg:hover {
  background-color: #black;
  color: #white;
}

#welcome-container {
  padding-bottom: 50px;
}

#welcome-steps {
  background-color: #fafafa;
  padding-bottom: 40px;
}

body {
  color: #000000;
  background: url('<%= asset_path("whiskeyglass3.png") %>') no-repeat center bottom fixed;
  background-position: 50% 50%;
}

.ingredient-row {
  background-color: #f8f8f8;
  padding: 0px 0px 20px 40px;
  margin-bottom: 18px;
  border-radius: 5px;
}

h1 {
  font-weight: bold;
}

h3 {
  font-size: 40px;
}

.jumbotron.h1 {
  font-size: 75;
}

.ingredient_row_container {
  margin-right: auto;
  margin-left: auto;
  padding-left: 15px;
  padding-right: 15px;
}

#elegant_image {
  padding-bottom: 30px;
}

.checkbox {
  padding-right: 12px;
}

.recipe-card {
  width:500px;
  background-color: #f8f8f8;
  border-radius: 5px;
  margin: 30px 30px 30px 0px;
  padding-bottom: 25px;
}

.recipe-card-headers{
  text-decoration: underline;
}

