<table>
  <thead>
    <th><%= @recipe.name %></th>
  </thead>
  <tbody>
    <tr>
      <td><%= @recipe.directions %></td>
      <td>Ingredients<br /><br />
        <% @recipe.ingredients.each do |ingredient| %>
          <%= ingredient.component.name %>
          (<%= ingredient.component.category.name %>)<br />
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
