<% if @recipes.empty? %>
  <p>Sorry, but fine drinks begin with fine ingredients. Please enter more ingredients and try again!</p>
<% end %>
<ul class="list-unstyled">
  <% @recipes.each do |recipe| %>

  <div class="col-md-12 recipe-card opacity">
    <div class="row center"><h3><%= recipe.name %></h3><hr /></div>
    <div class="row">
      <div class="col-md-4">
        <h4 class="recipe-card-headers">Ingredients</h4>
        <ul>
          <% recipe.ingredients.each do |ingredient| %>
            <li><%= ingredient.component.name %></li>
          <% end %>
        </ul>
      </div>
      <div class="col-md-8">
        <h4 class="recipe-card-headers">Directions</h4>
        <%= recipe.directions %>
      </div>

    </div>

  </div>

  <!-- <li><%= link_to recipe.name, recipe_path(recipe) %></li> -->
  <% end %>
</ul>

<%= paginate @recipes %>
