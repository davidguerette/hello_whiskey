<!DOCTYPE html>
<html>
<head>
  <title>Hello Whiskey!</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">
    <div class="navbar navbar-default navbar-fixed" role="navigation">
      <div class="navbar-collapse collapse">
      <div class="navbar-header">
        <%= link_to 'Hello Whiskey!', root_path, class: "navbar-brand" %>
      </div>
        <ul class="nav navbar-nav">
          <li><%= link_to 'What Can I Make?', recipes_search_path %></li>
          <li><%= link_to 'Browse', recipes_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to 'Your Favorites', user_favorites_path(current_user) %></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Sign In', new_user_session_path %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <% if current_page?(root_path) %>
    <div class="container-fluid">
      <div class="jumbotron">
        <div class="center">
          <h1 class="text-center">Hello Whiskey!</h1>
            <div class="row"></div>
            <div class="col-md-4" id="elegant_image"><%= image_tag("elegant3.png") %></div>
            <div class"col-md-8"><h3>Step 1: Gather your ingredients</h3></div>
            <%= link_to "Step 2: Fix a drink", recipes_search_path, class: "btn btn-lg" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="container-fluid">
    <div class="row">
      <div class="col"><%= notice %><%= alert %></div>
      <div class="col"><%= yield %></div>
    </div>
  </div>

</body>
</html>
